<form class="my-10 w-[600px] h-96 flex flex-col justify-between">
  <label class="text-2xl md:text-lg">
    <input
      type="text"
      placeholder="Name"
      required
      class="w-[600px] p-1 bg-transparent border-b-2 outline-none placeholder:uppercase focus:border-blue-500"
    />
  </label>
  <label class="text-2xl md:text-lg">
    <input
      type="email"
      placeholder="Email"
      required
      class="w-[600px] p-1 bg-transparent border-b-2 outline-none placeholder:uppercase focus:border-blue-500"
    />
  </label>
  <label class="text-2xl md:text-lg">
    <textarea
      required
      placeholder="Message"
      class="w-[600px] h-40 p-1 resize-none bg-transparent border-2 rounded-lg outline-none placeholder:uppercase focus:border-blue-500"
    ></textarea>
  </label>
  <button class="w-fit mx-auto px-4 py-1 bg-[#3a67fa] rounded-xl"
    >SEND MESSAGE
  </button>
</form>
