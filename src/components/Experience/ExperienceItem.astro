---
export interface Props {
  company: string;
  link: string;
  tag: string;
  place: string;
  position: string;
  from: string;
  end: string;
  achievements: Achievement[];
}

export interface Achievement {
  achievement: string;
}

const { company, link, tag, place, position, from, end, achievements } =
  Astro.props;
---

<section>
  <div
    class="absolute w-3 h-3 bg-blue-400 rounded-full mt-2 -start-1.5 border border-white">
  </div>
  <div class="flex flex-col gap-1">
    <h2 class="text-4xl md:text-2xl lg:text-xl text-blue-400 font-semibold">
      {company}
      <span class="text-3xl md:text-xl lg:text-lg text-blue-300">[{tag}]</span>
    </h2>
    <h4
      class="text-3xl md:text-lg lg:text-base font-normal text-blue-300">
      <time>
        {from} - {end} |
      </time>
      <span>
        {place}
      </span>
    </h4>
    <h1 class="text-4xl md:text-2xl lg:text-xl font-bold text-blue-500">
      {position}
    </h1>
  </div>
  <div class="my-2 font-normal text-white">
    <ul>
      {
        achievements.map((achieve) => {
          return (
            <li class="mb-2 text-3xl md:text-lg lg:text-base leading-snug lg:max-w-3xl">
              {achieve.achievement}
            </li>
          );
        })
      }
    </ul>
  </div>
</section>
