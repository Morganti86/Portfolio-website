---
export interface Props {
  name: string;
  image: string;
  image2?: string;
}

const { name, image, image2 } = Astro.props;

const path = `/techs/${image}`;
const path2 = `/techs/${image2}`;
---

<section>
  <div class="flex flex-col flex-wrap justify-center items-center gap-1 mr-3 mb-3">
    <img src={path || path2} class="size-20 md:size-16 lg:size-14" alt={name} />
    <h5 class="text-xl lg:text-base opacity-85">{name}</h5>
  </div>
</section>
