---
import Navbar from "../components/Navbar/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero/Hero.astro";
import Experience from "../components/Experience/Experience.astro";
import Techs from "../components/Techs/Techs.astro";
import Projects from "../components/Projects/Projects.astro";
import Linkedin from "../icons/Linkedin.astro";
import Code from "../icons/Code.astro";

const title = "Morganti86 - Software Developer Portfolio";
const description =
  "Responsive portfolio website showcasing projects, experience, and skills with Astro, Tailwind CSS, and TypeScript. Optimized for a seamless user experience.";
---

<Layout title={title} description={description}>
  <section id="Home">
    <Navbar />
    <Hero />

    <div class="container">
      <Code class="size-16 md:size-10" /><h2
        id="Experience"
        class="text-6xl md:text-4xl italic">
        EXPERIENCE
      </h2>
    </div>
    <Experience />
    <div class="container">
      <Code class="size-16 md:size-10" />
      <h2 id="Techs" class="text-6xl md:text-4xl italic">TECH STACK</h2>
    </div>
    <Techs />
    <div class="container">
      <Code class="size-16 md:size-10" />
      <h2 id="Projects" class="text-6xl md:text-4xl italic">PROJECTS</h2>
    </div>
    <Projects />
  </section>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: row;
    gap: 4px;
    margin-top: 5rem;
    margin-bottom: 1.25rem;
    /* flex flex-row gap-1 mt-20 mb-5 */
  }
</style>
