---
import Navbar from "../components/Navbar/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero/Hero.astro";
import Experience from "../components/Experience/Experience.astro";
import Techs from "../components/Techs/Techs.astro";
import Projects from "../components/Projects/Projects.astro";
import Contact from "../components/Contact/Contact.astro";
import TitleContainer from "../components/UI/TitleContainer.astro";
import Subtitle from "../components/UI/SubtitleContainer.astro";

const title = "Morganti86 - Software Developer Portfolio";
const description =
  "Responsive portfolio website showcasing experience, projects and skills. Made with Astro, Tailwind CSS, and TypeScript. Optimized for a seamless user experience.";
---

<Layout title={title} description={description}>
  <section id="Home">
    <Navbar />
    <Hero />
    <TitleContainer title="Experience"/>
    <Experience />
    <TitleContainer title="Techs"/>
    <Techs />
    <TitleContainer title="Projects"/>
    <Projects />
    <TitleContainer title="Contact"/>
    <Subtitle subtitle="DON'T BE SHY! HIT ME UP!" />
    <Contact />
  </section>
</Layout>

